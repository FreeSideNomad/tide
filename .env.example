# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tide_db

# OpenAI API Configuration
# Set this in your environment or create a .env file
# OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
DEBUG=True
ENVIRONMENT=development

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Session Management
SESSION_SECRET_KEY=your_session_secret_key_here_change_in_production
REDIS_URL=redis://localhost:6379

# Microsoft OAuth Configuration (for Feature 2)
# MICROSOFT_CLIENT_ID=your_microsoft_client_id
# MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret